@model HotelManagement.Booking.Bookings

@{
    ViewData["Title"] = "Create Booking";
}

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">MYSTWOOD</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Guests" asp-action="Index">Guests</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Rooms" asp-action="Index">Rooms</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="Bookings" asp-action="Index">Bookings</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Payments" asp-action="Index">Payments</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Page Content -->
<<div class="container mt-4 text-center">
    <h1 class="text-center">Create Booking</h1>
    <div class="d-flex justify-content-center">
        <div class="card shadow-lg" style="width: 60%;">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center">
                        <thead class="table-dark">            
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomType" class="form-label fw-bold">Room Type</label>
                            <select asp-for="RoomType" class="form-select">
                                <option value="Deluxe">Deluxe Room</option>
                                <option value="Double">Double Room</option>
                                <option value="Single">Single Room</option>
                                <option value="Triple">Triple Room</option>
                                <option value="Standard">Standard Room</option>
                            </select>
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CheckInDate" class="form-label fw-bold">Check-In Date</label>
                            <input asp-for="CheckInDate" type="date" class="form-control" />
                            <span asp-validation-for="CheckInDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CheckOutDate" class="form-label fw-bold">Check-Out Date</label>
                            <input asp-for="CheckOutDate" type="date" class="form-control" />
                            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Book Now</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="text-decoration-none fw-bold text-primary">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
