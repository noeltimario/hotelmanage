@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
       
</head>
<body>


    <!-- Navbar -->
    

    <!-- Hero Section -->
    <div class="container mt-5 pt-5">
        <div class="hero-section">
            <h1>Welcome to MYSTWOOD</h1>
            <p>Dear Guest, book your stay. Please review our room options below.</p>
        </div>
    </div>

    <!-- Rooms Section -->
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-4">
                <div class="card room-card">
                    <img src="/images/deluxe1.jpg" class="card-img-top" alt="Deluxe Room">
                    <div class="card-body text-center">
                        <h4 class="card-title">Deluxe Room</h4>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card room-card">
                    <img src="/images/deluxe2.jpg" class="card-img-top" alt="Double Room">
                    <div class="card-body text-center">
                        <h4 class="card-title">Double Room</h4>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card room-card">
                    <img src="/images/double.jpg" class="card-img-top" alt="Single Room">
                    <div class="card-body text-center">
                        <h4 class="card-title">Single Room</h4>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card room-card">
                    <img src="/images/single.jpg" class="card-img-top" alt="Triple Room">
                    <div class="card-body text-center">
                        <h4 class="card-title">Triple Room</h4>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card room-card">
                    <img src="/images/triple.jpg" class="card-img-top" alt="Standard Room">
                    <div class="card-body text-center">
                        <h4 class="card-title">Standard Room</h4>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card room-card">
                    <img src="/images/standard.jpg" class="card-img-top" alt="Luxury Suite">
                    <div class="card-body text-center">
                        <h4 class="card-title">Luxury Suite</h4>
                        <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

    